                android:layout_height="match_parent"
                android:src="@drawable/anotherrectangle" />


        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text=""/>



    </LinearLayout>

    <LinearLayout
