<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:background="@drawable/customrectangle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/habitTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            tools:text= "Test Title"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/habitStat"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="Test Reason"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Sunday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="S"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled" />

        <TextView
            android:id="@+id/Monday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="M"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled" />

        <TextView
            android:id="@+id/Tuesday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="T"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled" />

        <TextView
            android:id="@+id/Wednesday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="W"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled" />

        <TextView
            android:id="@+id/Thursday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="R"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled" />

        <TextView
            android:id="@+id/Friday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="F"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled" />

        <TextView
            android:id="@+id/Saturday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="S"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled" />

        <!--<TextView-->
            <!--android:id="@+id/Sunday"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--tools:text="Su Mo Tu We Th Fr Sa"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="@dimen/text_margin"-->
            <!--android:textAppearance="?attr/textAppearanceListItem"/>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/HabitProgess"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/HabitProgessNum"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:text="100 %"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
